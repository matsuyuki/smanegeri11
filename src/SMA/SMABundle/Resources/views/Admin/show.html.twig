{% extends 'SMASMABundle:Admin:template.html.twig' %}

{% block body -%}
     <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th align="center">Username</th>
                <td align="center">{{ entity.username }}</td>
            </tr>
             <tr>
                <th align="center">Password</th>
                <td align="center">{{ entity.password }}</td>
            </tr>
            <tr>
                <th align="center">Nama</th>
                <td align="center">{{ entity.nama }}</td>
            </tr>
            <tr>
                <th align="center">Status</th>
                <td align="center">{{ entity.status }}</td>
            </tr>
            <tr>
                <th align="center">Email</th>
                <td align="center">{{ entity.email }}</td>
            </tr>
            <tr>
                <th align="center">Alamat</th>
                <td align="center">{{ entity.alamat }}</td>
            </tr>

        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('member') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('member_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
