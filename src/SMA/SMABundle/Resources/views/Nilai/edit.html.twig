{% extends 'SMASMABundle:Admin:template.html.twig' %}

{% block body -%}
    <h2>Ubah Data Siswa</h2>
    <form class="well" id="form" method="POST" action="#">
        <table cellspacing=10>
            <tr>
                <td>NIS</td>
                <td><input type="text" name="nis" value="{{nilai.nis}}"></td>
            </tr>
            <tr>
                <td>Nama</td>
                <td><input type="text" name="nama" value="{{nilai.nama}}"></td>
            </tr>
                       
            <tr>
                <td>Mata Pelajaran</td>
                <td><input type="text" name="matapelajaran" value="{{nilai.matapelajaran}}"></td>
            </tr>
            <tr>
                <td>Tugas</td>
                <td><input type="text" name="alamat" value="{{nilai.tugas}}"></td>
            </tr>
            <tr>
                <td>UTS</td>
                <td><input type="text" name="alamat" value="{{nilai.uts}}"></td>
            </tr>
            <tr>
                <td>UAS</td>
                <td><input type="text" name="alamat" value="{{nilai.uas}}"></td>
            </tr>
            <tr><td>&nbsp;</td><td><input type="submit" name="submit" value="Simpan" class="button"></td></tr>
        </table>
    </form>
{% endblock %}
